{
  "gitbook": "2.x.x",
  
  // Book metadats (somes are extracted from the README by default)
  //"title": null,
  //"description": null,
  //"isbn": null,
  
  // Plugins list, can contain "-name" for removing default plugins
  "plugins": [
      "richquotes",
      "edit-link",
      "anchors",
      "autocover"
  ],
  
  // Links in template (null: default, false: remove, string: new value)
  "links": {
  	// Custom links at top of sidebar
    "sidebar": {
      "Contao.Ninja Homepage": "http://contao.ninja",
      "Contao.Ninja Docs": "http://docs.contao.ninja"
    },

    // Sharing links
    "sharing": {
        "google": false,
        "facebook": null,
        "twitter": null,
        "weibo": false,
        "all": false
    }
  },
  
  // Options for PDF generation
  "pdf": {
    "toc": false,
    
    // Font size for the fiel content, default: 12
		"fontSize": 14,
		
		// Paper size for the pdf
    // Choices are [u’a0’, u’a1’, u’a2’, u’a3’, u’a4’, u’a5’, u’a6’, u’b0’, u’b1’, u’b2’, u’b3’, u’b4’, u’b5’, u’b6’, u’legal’, u’letter’]
    "paperSize": "a4",
    
    //Header HTML template. Available variables: _PAGENUM_, _TITLE_, _AUTHOR_ and _SECTION_.
    "headerTemplate": null,

    //Footer HTML template. Available variables: _PAGENUM_, _TITLE_, _AUTHOR_ and _SECTION_.
    "footerTemplate": null
  },
  
  // Global configuration for plugins
  "pluginsConfig": {
      "edit-link": {
          "base": "https://github.com/BugBuster1701/docs/edit/master/cookbook-tdd",
          "label": "Seite bearbeiten"
      },
      "autocover": {
                "title": "Kochbuch TDD für Contao Erweiterungen",
                "author": "BugBuster",
                "font": {
                    "size": null,
                    "family": "Impact",
                    "color": "#FFF"
                },
                "size": {
                    "w": 1800,
                    "h": 2360
                },
                "background": {
                    "color": "#b35418"
                }
      }
  }
}
